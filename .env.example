# Atlas Travel Platform - Environment Configuration Template
# Copy this file to .env.local for development or .env.production for production

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development | production | testing)
NODE_ENV=development

# Application URL (used for redirects, email links, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application Port (for local development)
PORT=3000

# Application Details
APP_NAME="Atlas Travel Platform"
APP_VERSION="1.0.0"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database connection
DATABASE_URL="postgresql://atlas_user:atlas_dev_password_2024@localhost:5432/atlas_development"

# Direct database connection (for migrations and admin tasks)
DIRECT_URL="postgresql://atlas_user:atlas_dev_password_2024@localhost:5432/atlas_development"

# Optional: Read replica for analytics (production only)
# ANALYTICS_DATABASE_URL="postgresql://username:password@read-replica:5432/atlas_production"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret - MUST be changed for production (use 256-bit random string)
JWT_SECRET="your-super-secret-jwt-key-for-development-only-change-in-production"

# JWT Token Expiration (e.g., "24h", "7d", "30m")
JWT_EXPIRES_IN="24h"

# Force HTTPS redirects (set to true in production)
FORCE_HTTPS=false

# Secure cookies (set to true in production with HTTPS)
SECURE_COOKIES=false

# HSTS Max Age in seconds (31536000 = 1 year)
HSTS_MAX_AGE=31536000

# =============================================================================
# REDIS CONFIGURATION (Optional - for session storage and caching)
# =============================================================================

# Redis connection URL
# REDIS_URL="redis://localhost:6379"

# Redis password (if authentication is enabled)
# REDIS_PASSWORD=""

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email service configuration
# EMAIL_SERVICE_API_KEY=""
# EMAIL_SERVICE_URL=""
# FROM_EMAIL="noreply@atlas-platform.com"

# Backup service URL
# BACKUP_SERVICE_URL=""

# Monitoring service URL (e.g., Sentry, New Relic)
# MONITORING_SERVICE_URL=""
# SENTRY_DSN=""
# NEW_RELIC_LICENSE_KEY=""

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

# Log level (error | warn | info | debug)
LOG_LEVEL=info

# Log file path (leave empty for console only)
# LOG_FILE="/var/log/atlas/app.log"

# Enable debug mode for development
# DEBUG=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Database connection pool settings
# MAX_CONNECTIONS=50
# CONNECTION_TIMEOUT=30000
# QUERY_TIMEOUT=15000

# =============================================================================
# DEVELOPMENT SETTINGS (Development only)
# =============================================================================

# Disable SSL verification for development (never use in production)
# NODE_TLS_REJECT_UNAUTHORIZED=0

# Enable hot reloading for development
# HOT_RELOAD=true

# =============================================================================
# PRODUCTION SETTINGS (Production only)
# =============================================================================

# Instance identifier (for multi-instance deployments)
# INSTANCE_ID="prod-1"

# Enable production optimizations
# NODE_ENV=production
# NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable/disable specific features
# FEATURE_ANALYTICS_V2=false
# FEATURE_ADVANCED_REPORTING=true
# FEATURE_AUDIT_LOGS=true
# FEATURE_AUTO_BACKUP=true

# =============================================================================
# IMPORTANT SECURITY NOTES:
# 
# 1. Never commit this file with real credentials
# 2. Use strong, unique passwords for all services
# 3. Generate a cryptographically secure JWT secret
# 4. Enable HTTPS and secure cookies in production
# 5. Regularly rotate secrets and passwords
# 6. Use environment-specific configuration management
# 7. Consider using a secrets management service for production
# =============================================================================