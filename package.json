{
  "name": "atlas-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:performance": "node scripts/validate-performance.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:indexes": "npx prisma db execute --file scripts/apply-indexes.sql --schema prisma/schema.prisma",
    "cache:redis": "docker-compose -f docker-compose.redis.yml up -d",
    "cache:redis:stop": "docker-compose -f docker-compose.redis.yml down",
    "cdn:start": "docker-compose -f docker-compose.cdn.yml up -d",
    "cdn:stop": "docker-compose -f docker-compose.cdn.yml down",
    "performance:validate": "node scripts/validate-performance.js",
    "performance:benchmark": "node scripts/benchmark.js",
    "production:setup": "npm run db:indexes && npm run cache:redis && npm run build",
    "production:validate": "NODE_ENV=production npm run performance:validate",
    "icons:generate": "node scripts/create-correct-sized-icons.js",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tanstack/react-query": "^5.17.19",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.0",
    "date-fns": "^3.1.0",
    "exceljs": "^4.4.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.539.0",
    "next": "15.4.5",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.48.2",
    "recharts": "^2.10.3",
    "redis": "^4.6.12",
    "tailwind-merge": "^2.2.0",
    "web-vitals": "^5.1.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.4.5",
    "jsdom": "^23.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "prisma": "^5.8.1",
    "tailwindcss": "^4.0.0-beta.11",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
