# Atlas Travel Platform - Production Environment Configuration
# IMPORTANT: Copy this to .env.production and update all values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=production

# Application URL - Update with your domain or IP
NEXT_PUBLIC_APP_URL=http://164.90.214.139

# Application Port
PORT=3000

# Application Details
APP_NAME="Atlas Travel Platform"
APP_VERSION="1.0.0"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection - UPDATE PASSWORD!
DATABASE_URL="postgresql://atlas_user:CHANGE_THIS_STRONG_PASSWORD@localhost:5432/atlas_production"
DIRECT_URL="postgresql://atlas_user:CHANGE_THIS_STRONG_PASSWORD@localhost:5432/atlas_production"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret - MUST CHANGE! Generate with: openssl rand -base64 32
JWT_SECRET="CHANGE_THIS_TO_256_BIT_RANDOM_STRING"

# JWT Token Expiration
JWT_EXPIRES_IN="24h"

# Security settings
FORCE_HTTPS=false  # Set to true when SSL is configured
SECURE_COOKIES=false  # Set to true when using HTTPS
HSTS_MAX_AGE=31536000

# =============================================================================
# REDIS CONFIGURATION (Optional but recommended for production)
# =============================================================================

# Uncomment if Redis is installed
# REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD=""

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Database connection pool
MAX_CONNECTIONS=50
CONNECTION_TIMEOUT=30000
QUERY_TIMEOUT=15000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level
LOG_LEVEL=info

# Log file path
LOG_FILE="/var/log/atlas/app.log"

# Monitoring service (optional)
# SENTRY_DSN=""
# NEW_RELIC_LICENSE_KEY=""

# =============================================================================
# PRODUCTION OPTIMIZATIONS
# =============================================================================

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Instance identifier (for load balancing)
INSTANCE_ID="prod-1"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

FEATURE_ANALYTICS_V2=true
FEATURE_ADVANCED_REPORTING=true
FEATURE_AUDIT_LOGS=true
FEATURE_AUTO_BACKUP=false

# =============================================================================
# CRITICAL PRODUCTION CHECKLIST:
# 
# ✅ 1. Generate strong DATABASE password (min 20 characters)
# ✅ 2. Generate cryptographically secure JWT_SECRET
# ✅ 3. Update NEXT_PUBLIC_APP_URL with actual domain/IP
# ✅ 4. Enable FORCE_HTTPS and SECURE_COOKIES after SSL setup
# ✅ 5. Configure Redis for session management
# ✅ 6. Setup monitoring service (Sentry/New Relic)
# ✅ 7. Configure email service for notifications
# ✅ 8. Setup automated backups
# ✅ 9. Never commit this file with actual values
# ✅ 10. Regularly rotate secrets and passwords
# =============================================================================