# Atlas Platform Production Environment Variables
# Performance Optimizations Enabled

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/atlas_production?connection_limit=20&pool_timeout=20"

# Redis Configuration for Production Caching
REDIS_URL=redis://localhost:6379
ENABLE_REDIS=true
REDIS_PASSWORD=your_production_redis_password
REDIS_DB=0

# Performance Settings
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SW=true
NODE_ENV=production

# Cache Configuration
DEFAULT_CACHE_TTL=300
MASTER_DATA_CACHE_TTL=1800
DASHBOARD_CACHE_TTL=180
API_RESPONSE_CACHE_TTL=300

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_LOG_LEVEL=info
SLOW_QUERY_THRESHOLD=1000

# CDN Configuration (Optional)
CDN_URL=https://cdn.yourdomain.com
STATIC_ASSETS_CDN=https://cdn.yourdomain.com/static

# Bundle Optimization
NEXT_PUBLIC_ENABLE_SW=true
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# Security
SECRET_KEY=your_super_secret_key_here_change_this_in_production
JWT_SECRET=your_jwt_secret_here_change_this_in_production